<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
  <h1 class="h2">Manage Categories</h1>
</div>

{{!-- <h2>Categories</h2> --}}
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Category</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each categories}}
      <tr>
        <td>{{category.title}} <br><small>({{questionCount}} questions)</small></td>
        <td>
          <button class="btn btn-outline-danger popover-trigger" data-container="body" data-trigger="hover"
            data-toggle="focus" data-placement="top" data-html="true"
            data-title="Do you want to delete this category {{category.title}}?"
            data-content="<a class='btn btn-danger btn-block' href='/admin/delete_category/{{category._id}}'>REMOVE</a>">
            Remove <i class="fas fa-close"></i>

          </button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <hr>
  <p class="text-danger">or, Insert a new category</p>
  <form action="/admin/add_category" method="POST">
    <div class="form-group">
      <input type="text" placeholder="Enter a Category Name ..." name="category_name" class="form-control">
    </div>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <button class="btn btn-success" type="submit">Insert</button>
  </form>
</div>
